// dougchess/Client.cpp
// 
// Minichess client. Responsible for main communication loop
// with the Minichess framework.
#ifndef CLIENT_H

#include <zmq.h>
#include <string>
#include <stdio.h>
#include <cstring>
#include "cjson.h"


class Client {
 public: 
  Client();
  ~Client();
  int start(int _port, std::string _name);
  int connect(int _port, std::string _name);
  int disconnect();
  
 private:
  void main_loop();
  void handle_json(cJSON* in, cJSON* out);

  bool running;
  bool connected;
  void* contextHandle;
  void* socketHandle;
  int port;
  std::string name;
};

#endif
